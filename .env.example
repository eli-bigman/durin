# Environment variables for deployment
# Copy this to .env and fill in your values

# Required for deployment
PRIVATE_KEY=0x... # Your deployer wallet private key
DEPLOYER_ADDRESS=0x... # Your deployer wallet address

# Network RPC URLs
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
# Alternative RPC (if you have Alchemy/Infura):
# BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Optional - Fee recipient (defaults to deployer if not set)
FEE_RECIPIENT=0x... # Address to receive policy creation fees

# Optional - For contract verification on Basescan
ETHERSCAN_API_KEY=... # Get from https://basescan.org/apis

# Optional - For enhanced logging
DEBUG=true

# Legacy environment variables (still supported)
# Required: An RPC URL to the chain you want to deploy your L2Registrar to
# Tip: Try using the public RPCs in the foundry.toml file
L2_RPC_URL=

# Required: The address of your L2Registry deployed from durin.dev
L2_REGISTRY_ADDRESS=
ETHERSCAN_API_KEY=


